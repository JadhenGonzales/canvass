{  
    "manifest_version": 2,
    "name": "Canvass",
    "version": "1.0",

    "description": "Helps store item prices across multiple store pages.",

    "icons": {
        "48": "graphics/icon48.png",
        "96": "graphics/icon96.png"
    },    

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_title": "Canvass",
        "default_popup": "popup/index.html"
    },

    "permissions": ["activeTab","clipboardWrite", "downloads"]
}